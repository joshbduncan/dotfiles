# Show/Hide Finder Files
alias show='defaults write com.apple.finder ShowAllFiles TRUE'
alias hide='defaults write com.apple.finder ShowAllFiles FALSE'

# Show/Hide Desktop Icons
alias cleandesk="defaults write com.apple.finder CreateDesktop false; killall Finder"
alias messydesk="defaults write com.apple.finder CreateDesktop true; killall Finder"

# Edit/Reload zsh profile
alias editprofile='vim ~/Dropbox/Dev/dotfiles/.zshrc'
alias codeprofile='code ~/Dropbox/Dev/dotfiles/.zshrc'
alias editaliases='vim ~/Dropbox/Dev/dotfiles/.aliases'
alias codealiases='code ~/Dropbox/Dev/dotfiles/.aliases'
alias reload='source ~/.zshrc'
alias dotfiles='cd ~/Dropbox/Dev/dotfiles'

# Open Common Mac Programs
alias text='open -a TextEdit'
alias pre='open -a Preview'
alias tictactoe='python3 ~/Dropbox/Dev/projects/games/tic-tac-toe/tic-tac-toe.py'
alias expenses='python3 ~/Dropbox/Dev/projects/Expenses2PDF/expenses2pdf.py'
alias new_job='python3 ~/Dropbox/Dev/projects/DNKD/new_job.py'


# List all files colorized in long format, including dot files
colorflag="-G"
alias la="ls -lahF ${colorflag}"

# Always use color output for `ls`
alias ls="command ls -GFh ${colorflag}"
export LS_COLORS='no=00:fi=00:di=04;35:ln=01;36:pi=40;33:so=01;35:do=01;35:bd=40;33;01:cd=40;33;01:or=40;31;01:ex=01;32:*.tar=01;31:*.tgz=01;31:*.arj=01;31:*.taz=01;31:*.lzh=01;31:*.zip=01;31:*.z=01;31:*.Z=01;31:*.gz=01;31:*.bz2=01;31:*.deb=01;31:*.rpm=01;31:*.jar=01;31:*.jpg=01;35:*.jpeg=01;35:*.gif=01;35:*.bmp=01;35:*.pbm=01;35:*.pgm=01;35:*.ppm=01;35:*.tga=01;35:*.xbm=01;35:*.xpm=01;35:*.tif=01;35:*.tiff=01;35:*.png=01;35:*.mov=01;35:*.mpg=01;35:*.mpeg=01;35:*.avi=01;35:*.fli=01;35:*.gl=01;35:*.dl=01;35:*.xcf=01;35:*.xwd=01;35:*.ogg=01;35:*.mp3=01;35:*.wav=01;35:'

export LSCOLORS='Gxfxcxdxbxegedabagacad'

# Common Commands
alias ls='ls -GFh'
alias ll='exa -l'
alias la='exa -la'
alias cat='bat'
alias q='exit'
alias c='clear'
alias h='history'
alias cls='clear;ls'
alias gs='git status'
alias diskspace='df -h /Volumes/Macintosh\ HD'

alias myip='ifconfig | grep "inet "'
alias ip='curl icanhazip.com'

alias filecount='find . -type f | wc -l'

alias cpu='top -o cpu'
alias mem='top -o rsize'

# Python Virtual Environments
alias vmake='python3 -m venv venv'
alias vstart='source venv/bin/activate'
alias vrestart='deactivate; source venv/bin/activate'
alias vend='deactivate'

